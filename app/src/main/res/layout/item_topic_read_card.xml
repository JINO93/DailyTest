<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="296dp"
    android:layout_height="74dp"
    android:background="@drawable/topic_8dp_solid_07fecc00">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="ALALLALALA"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover" />

    <com.yibasan.lizhifm.common.base.views.widget.IconFontTextView
        android:id="@+id/tv_reply_count_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lz_ic_comment_zero"
        android:textColor="@color/color_30_000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintLeft_toLeftOf="@id/tv_card_title"
        app:layout_goneMarginStart="12dp"
        app:ttf_version="1" />

    <TextView
        android:id="@+id/tv_reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="123"
        android:textColor="@color/color_30_000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_reply_count_ic"
        app:layout_constraintLeft_toRightOf="@id/tv_reply_count_ic"
        app:layout_constraintTop_toTopOf="@id/tv_reply_count_ic" />

    <com.yibasan.lizhifm.common.base.views.widget.IconFontTextView
        android:id="@+id/tv_like_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/lz_ic_like"
        android:textColor="@color/color_30_000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_reply_count_ic"
        app:layout_constraintLeft_toRightOf="@id/tv_reply_count"
        app:ttf_version="1" />

    <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="123"
        android:textColor="@color/color_30_000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_reply_count"
        app:layout_constraintLeft_toRightOf="@id/tv_like_ic" />


    <LinearLayout
        android:id="@+id/layout_right_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_8dp_bl_tr_solid_18f5a623"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.yibasan.lizhifm.common.base.views.widget.IconFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#f5a623"
            android:textSize="12sp"
            app:ttf_version="1" />

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:text="领读人"
            android:textColor="#f5a623"
            android:textSize="10sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>