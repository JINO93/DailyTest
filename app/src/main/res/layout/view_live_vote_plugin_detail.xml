<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:background="@color/color_fe5353"
        android:id="@+id/view_vote_detail_close"
        android:layout_width="74dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/layout_vote_plguin_detail_content"
        app:layout_constraintRight_toRightOf="@+id/layout_vote_plguin_detail_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_vote_plguin_detail_content">

        <com.yibasan.lizhifm.common.base.views.widget.IconFontTextView
            android:id="@+id/tv_close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_vote_detail_close"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_close_text"
            app:layout_constraintTop_toTopOf="@+id/view_vote_detail_close" />

        <TextView
            android:id="@+id/tv_close_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="关闭"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_vote_detail_close"
            app:layout_constraintLeft_toRightOf="@+id/tv_close_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_vote_detail_close" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:background="@color/color_0da94b"
        android:id="@+id/layout_vote_plguin_detail_content"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_top_name_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_vote_detail_top"
            app:layout_constraintDimensionRatio="H,5.6:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>





</android.support.constraint.ConstraintLayout>