<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/topic_lt_rt_25dp_solid_000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintLeft_toRightOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="asdjf;lkajsdlf"
        android:textColor="#30000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/topic_8dp_solid_07000000_stroke_0a000000_1dp"
        android:gravity="top|left"
        android:hint="asl;kdjf;ljasd;"
        android:minHeight="176dp"
        android:maxHeight="500dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_max_input"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/140"
        android:textColor="#20000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/et_content"
        app:layout_constraintRight_toRightOf="@id/et_content"
        android:layout_marginRight="12dp" />

    <TextView
        android:id="@+id/tv_current_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#20000000"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_max_input"
        app:layout_constraintRight_toLeftOf="@id/tv_max_input" />

    <View
        android:id="@+id/view_share_dot"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/topic_oval_solid_fe5353"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_content"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="LKSJDLFJLSDFasjdf;lkj"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/view_share_dot"
        app:layout_constraintLeft_toRightOf="@id/view_share_dot"
        app:layout_constraintTop_toTopOf="@id/view_share_dot"
        android:layout_marginLeft="4dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:background="@drawable/topic_9dp_solid_07000000"
        app:layout_constraintLeft_toLeftOf="@id/et_content"
        app:layout_constraintRight_toRightOf="@id/et_content"
        app:layout_constraintTop_toBottomOf="@id/view_share_dot">


        <View
            android:id="@+id/view_shadow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="11dp"
            android:background="@drawable/topic_6dp_solid_e6e6e6_stroke_d7d7d7_05dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            app:layout_constraintLeft_toLeftOf="@+id/iv_cover"
            app:layout_constraintTop_toTopOf="@+id/iv_cover"
            android:layout_marginLeft="11dp" />

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/tv_card_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/topic_8dp_solid_80000000"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:text="播单"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            android:layout_marginLeft="12dp" />

        <TextView
            app:layout_goneMarginStart="12dp"
            android:id="@+id/tv_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:text="播单"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#80000000"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toLeftOf="@+id/layout_btn_modify"
            app:layout_constraintLeft_toRightOf="@id/tv_card_tag"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="2019***"
            android:textColor="#30000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintLeft_toRightOf="@id/iv_cover"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/tv_play_count_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="X"
            android:textColor="#30000000"
            android:textSize="12sp"
            app:layout_goneMarginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintStart_toEndOf="@id/tv_time"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="123"
            android:textColor="#30000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_play_count_ic"
            app:layout_constraintLeft_toRightOf="@id/tv_play_count_ic"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/tv_reply_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="X"
            android:textColor="#30000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_play_count_ic"
            app:layout_constraintLeft_toRightOf="@id/tv_play_count"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="123"
            android:textColor="#30000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_play_count_ic"
            app:layout_constraintLeft_toRightOf="@id/tv_reply_ic"
            android:layout_marginLeft="2dp" />

        <LinearLayout
            android:id="@+id/layout_btn_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/topic_8dp_bl_tr_solid_4d98ee"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:gravity="center_vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="#4d98ee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="修改播单"
                android:textColor="#4d98ee"
                android:textSize="12sp"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/view_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="#07000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_finish" />

    <TextView
        android:id="@+id/btn_finish"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/topic_22dp_solid_fe5353"
        android:gravity="center"
        android:text="Finish"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/et_content"
        app:layout_constraintRight_toRightOf="@id/et_content"
       app:layout_constraintBottom_toTopOf="@+id/view_bottom_holder" />

    <View
        android:id="@+id/view_bottom_holder"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>