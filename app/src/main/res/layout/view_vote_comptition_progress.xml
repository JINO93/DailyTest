<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/v_vote_competition_bg"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="@drawable/live_bg_vote_competition"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/v_vote_competition_progress"
        android:layout_width="132dp"
        android:layout_height="22dp"
        android:layout_marginStart="1.5dp"
        android:scaleType="fitXY"
        android:src="@drawable/live_bg_vote_progress2"
        app:layout_constraintBottom_toBottomOf="@+id/v_vote_competition_bg"
        app:layout_constraintLeft_toLeftOf="@+id/v_vote_competition_bg"
        app:layout_constraintTop_toTopOf="@+id/v_vote_competition_bg" />

    <TextView
        android:id="@+id/tv_left_team_vote_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_vote_competition_bg"
        app:layout_constraintLeft_toLeftOf="@+id/v_vote_competition_bg"
        app:layout_constraintTop_toTopOf="@+id/v_vote_competition_bg" />

    <TextView
        android:id="@+id/tv_right_team_vote_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_vote_competition_bg"
        app:layout_constraintRight_toRightOf="@+id/v_vote_competition_bg"
        app:layout_constraintTop_toTopOf="@+id/v_vote_competition_bg" />
</android.support.constraint.ConstraintLayout>